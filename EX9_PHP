function calcularSomaPositivosENegativos($numeros) {
    $somaPositivos = 0;
    $totalNegativos = 0;
 
    foreach ($numeros as $numero) {
        if ($numero > 0) {
            $somaPositivos += $numero;
        } elseif ($numero < 0) {
            $totalNegativos++;
        }
